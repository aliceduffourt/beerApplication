<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Main2Activity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/beeralcohol_degree"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/beerdescbeer"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/beerstyle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/beerbrewery"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/beeraddress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/beercity"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/beerphone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                />
            <TextView
                android:id="@+id/beerwebsite"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:autoLink="web"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="15sp"
                />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>